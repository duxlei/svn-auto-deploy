<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.TaskLogMapper">

	<resultMap type="TaskLog" id="TaskLogResult">
		<id     property="id"     		column="id" />
		<result property="taskId"  		column="task_id" />
		<result property="taskLog"   	column="task_log" />
		<result property="status" 		column="status" />
		<result property="createTime"  column="create_time" />
		<result property="createBy"   	column="create_by" />
		<result property="updateTime"  column="update_time" />
		<result property="updateBy"   	column="update_by" />
		<result property="deleted"   	column="deleted" />
	</resultMap>

	<select id="selectByTaskId" resultType="com.ruoyi.system.domain.TaskLog">
		select * from task_log where task_id=#{taskId}
	</select>

	<insert id="insert">
		insert into task_log (
			task_id,
			task_log,
			status,
			create_by
		) value (
			#{taskId},
			#{taskLog},
			#{status},
			#{createBy}
		)
	</insert>

	<update id="update">
		update task_log
		<set>
			<if test="taskLog != null and taskLog != ''">task_log=#{taskLog},</if>
			<if test="status != null">status=#{status},</if>
			<if test="updateBy != null and updateBy != ''">update_by=#{updateBy}</if>
		</set>
		where id=#{id}
	</update>

</mapper> 